    <select id="selectByUserId" parameterType="java.lang.String" resultType="Menu">
        select a.*
        from sys_menu a
                 left join sys_role_menu rm on rm.menu_id = a.id
                 left join sys_user u on u.role_id = rm.role_id
        where a.enabled = 1
          and u.id = #{userId}
    </select>

    <select id="selectChildren" resultType="Menu">
        SELECT * FROM sys_menu WHERE FIND_IN_SET(id, FIND_CHILDREN(#{id}))
    </select>
